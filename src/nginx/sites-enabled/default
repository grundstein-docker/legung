server {
  listen 80;
  server_name localhost;
  lua_code_cache on;

  location / {
    default_type text/html;

    content_by_lua '
      require("lapis").serve("app")
    ';
  }

  location /favicon.ico {
    alias assets/favicon.ico;
  }

  error_page 404 /index.html;
}

server {
  listen 80;

  server_name
    s1.localhost
    s2.localhost
    s3.localhost
    s4.localhost
    s5.localhost
    s6.localhost
    s7.localhost
    s8.localhost;

  location / {
    alias assets/;
  }

  location /favicon.ico {
    alias assets/favicon.ico;
  }

  error_page 404 /index.html;
}
